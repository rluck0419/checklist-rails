<h2 class='text-center head-title'><%= "Task List(s)" %></h2>

<h4 class='text-center'>Task #<%=task.id%></h4>

<div class='row'>
  <div class='pos col-xs-1'><%= task.position %></div>
  <div class='bod col-xs-3 col-lg-8 col-md-7 col-sm-6'><%= task.body %></div>
  <% if task.completed %>
    <div class='com col-md-1 col-sm-2 col-xs-3'>Complete</div>
  <% else%>
    <div class='incom col-md-1 col-sm-2 col-xs-3'>Incomplete</div>
  <% end %>
  <div class='view col-xs-2 col-sm-1'><%= link_to("Show Task", task, class: 'btn btn-primary') %></div>
</div>

<div class='col-sm-1'><%= link_to("Tasks", "/tasks", class: 'btn btn-primary') %></div>
<div class='col-sm-1'><%= link_to("Edit Task", edit_task_path(task), class: 'btn btn-warning') %></div>
<div class='col-sm-1'><%= link_to("Delete Task", task, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure you want to delete this task?' }) %></div>
