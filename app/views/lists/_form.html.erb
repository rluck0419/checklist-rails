<div><h4><%= form_title %></h4></div>

<div>
  <% if list.errors.any? %>
    <% list.errors.full_messages.each do |msg| %>
      <p> <%= msg %></p>
    <% end %>
  <% end %>
</div>

<div>
  <%= form_for(list) do |f| %>
    <div class="form-group">
      <label for="name">Name:</label>
      <%= f.text_field :name, placeholder: list.name, class: 'form-field' %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
